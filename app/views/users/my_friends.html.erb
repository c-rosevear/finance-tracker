<%= render 'friends/lookup' %>
 
<% if @friendships.size > 0 %>
<Table class="table table-stripped">
<thead>
    <tr>
        <th colspan="3" class="page-header">
            <h2> Friends </h2>
        </th>
    </tr>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
    <% @friendships.each do |friend| %>
    <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
        <%= link_to "View", user_path(friend), class:'btn btn-xs btn-primary' %>
        <%= link_to "Remove", friendship_path(friend), 
                    method: :delete, 
                    data: {confirm: 'Are you sure?'}, 
                    class: 'btn btn-xs btn-danger' %>
        </td>
    </tr>
    <% end %>
</tbody>
</table>

<% else %>
<p class="You don't have any friends yet.</p>
<% end %>