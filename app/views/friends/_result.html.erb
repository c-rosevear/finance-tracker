<% if params[:action] == 'search_friends' %>
<div class="results-block">
  <%= bootstrap_flash %>
</div>
<% end %>

<% if @users %>
<% if @users.size > 0 %>
<div id="friend-lookup-results" class="results-block col-md-10">
    <table class="table table-striped search-results-table">
    <% @users.each do |user| %>
    <tbody>
    <tr>
        <td><strong>Name</strong> <%= user.full_name %></td>
        <td><strong>Email</strong> <%= user.email %></td>
        <td><%= link_to "View Profile", user_path(user), class:'btn btn-xs btn-success' %>
        <% if current_user.not_friends_with?(user.id) %>
            <%= link_to 'Add Friend', add_friend_path(user: current_user, friend: user),
                class:'btn btn-xs btn-success', method: :post  %>
        <% else %>
             <span class="label label-primary"> <i class="fa fa-user"></i> Friends</span>
        <% end %>
        </td>

    </tr>
    <% end %>
    </tbody>
    </table>
</div>
<% end %>
<% end %>